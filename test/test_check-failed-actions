# Test: Look for failed actions
echo "$(date) - Checking for Stopped resources:"
MINUTES=10
i=1
while [ $i -lt $MINUTES ]
do
 # Checking for failed actions
 echo "$(date) - List of cluster's failed actions:"
 check_failed_actions
 # Checking for still stopped resources
 sudo pcs status | grep "Stopped" > /dev/null 2>&1
 if [ $? -eq 0 ]
  then
   echo "Still waiting for all resources to start..."
  else
   echo "No stopped resources."
   exit 0
 fi
 let "i++"
 # Wait a minute
 sleep 60
done
# If we are here then we have problems
exit 1
